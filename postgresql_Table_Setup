Create TABLE if not exists CO2Measurements (
                                             id serial PRIMARY KEY,
                                             DeviceID TEXT, 
                                             NrwID BIGINT,
                                             NrwName TEXT,
                                             StartTime BIGINT,
                                             Latitude NUMERIC(10,7),
                                             Longitude NUMERIC(10,7),
                                             WindowsOpen TEXT,
                                             VentilationSystem TEXT,
                                             OccupancyLevel TEXT,
                                             AdditionalNotes TEXT,
                                             CO2ppmArray TEXT,
                                             TimestampArray TEXT,
                                             ppmAvg NUMERIC,
                                             UNIQUE (NrwID,StartTime)
);
/*TODO add unique constraint to existing table  */
ALTER TABLE CO2Measurements
    ADD CONSTRAINT unique_nrwid_starttime UNIQUE (NrwID, StartTime);

/*TABLE with detailed location Info: NrwID , OSMKey, OSMTag */
Create TABLE if not exists nwrDetails
(
    id SERIAL PRIMARY KEY,
    nwrID BIGINT,
    Latitude NUMERIC(10,7),
    Longitude NUMERIC(10,7),
    OSMKey text,
    OSMTag text,
    UNIQUE(nwrID)
);
